
@{
    ViewData["Title"] = "Delete";
}
@model TheLoai

<div class="container">
    <h3>Bạn có chắc muốn xóa không?</h3>
    <form method="post" asp-action="DeleteConfirm">
        <input asp-for="Id" type="hidden" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <lable asp-for="Name">Tên thể loại</lable>
            <input asp-for="Name" type="text" disabled class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <lable asp-for="DateCreated">Ngày tạo</lable>
            <input asp-for="DateCreated" type="date" disabled class="form-control" />
            <span asp-validation-for="DateCreated" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>