@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/styleLogin.css">
@*<h1>@ViewData["Title"]</h1>*@

<div class="row">
    <!--Customs-->
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="navbar-nav ml-auto py-0">
                    <li class="nav-item">
                        <a class="nav-item nav-link" asp-area="Identity" asp-page="/Account/Login">Login<i class="fa-regular fa-right-to-bracket"></i></a>
                    </li>
                </div>
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>
                    <form class="register-form" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="form-group">
                            <label asp-for="Input.Name"><i class="zmdi zmdi-email"></i></label>
                            <input asp-for="Input.Name" autocomplete="username" aria-required="true" placeholder="Name" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email"><i class="zmdi zmdi-email"></i></label>
                            <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Address"><i class="zmdi zmdi-email"></i></label>
                            <input asp-for="Input.Address" autocomplete="username" aria-required="true" placeholder="Address" />
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"><i class="zmdi zmdi-lock"></i></label>
                            <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                            <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="ConfirmPassword" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Role"><i class="zmdi zmdi-lock-outline"></i></label>
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select form-select-lg mb-3">
                                <option disabled selected>Choose role</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                        </div>
                        <div class="form-group form-button">
                            <button id="registerSubmit" type="submit" class="form-submit">Register</button>
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="~/images/signup-image.jpg" alt="sing up image"></figure>
                    <a href="#" class="signup-image-link">I am already member</a>
                </div>
            </div>
        </div>
    </section>
    <!--End Customs-->
    <div class="col-md-20 col-md-offset-2">
        <section>
            <h3>Use another service to register.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


